<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/beige">

    <ListView
        android:id="@+id/trend"
        android:layout_width="364dp"
        android:layout_height="385dp"
        android:divider="@color/dark_magenta"
        android:dividerHeight="1dp"
        android:listSelector="@color/lightest_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feeling Adventurous ;)"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/trend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/dark_magenta"
        android:fontFamily="@font/gagalin"/>

</androidx.constraintlayout.widget.ConstraintLayout>